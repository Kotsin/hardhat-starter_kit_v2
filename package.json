{
  "name": "template",
  "scripts": {
    "format": "npm run format:c && npm run format:t && npm run format:d",
    "format:c": "npm run prtf:c && npm run lint:c",
    "format:t": "npm run prtf:t && npm run lint:t",
    "format:d": "npm run prtf:d && npm run lint:d",
    "prtf:c": "prettier --write ./contracts/**/*.sol",
    "prtf:t": "prettier --write ./test",
    "prtf:d": "prettier --write ./deploy",
    "lint:c": "solhint 'contracts/**/*.sol'",
    "lint:t": "eslint --fix ./test",
    "lint:d": "eslint --fix ./deploy",
    "compile": "npm run format:c && hardhat compile",
    "test": "npm run format:t && hardhat test",
    "deploy:m": "npm run format:c && hardhat deploy --tags mainnet",
    "deploy:t": "npm run format:c && hardhat deploy --tags sepolia",
    "coverage": "env COVERAGE=true hardhat coverage",
    "size": "npm run compile && hardhat size-contracts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "^4.7.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "chai": "^4.2.0",
    "coverage": "^0.4.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.8.3",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.11",
    "hardhat-deploy-ethers": "0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^8.0.0",
    "husky-init": "^8.0.0",
    "keccak256": "^1.0.2",
    "merkletreejs": "^0.2.13",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "solidity-docgen": "^0.6.0-beta.29",
    "ts-node": "^10.1.0",
    "typechain": "^5.2.0",
    "typescript": "^4.5.2",
    "lint-staged": "^13.2.2"
  }
}